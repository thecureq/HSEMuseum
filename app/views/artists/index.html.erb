<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Born</th>
      <th>Died</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= link_to artist.name, artist %></td>
        <td><%= artist.born %></td>
        <td><%= artist.died %></td>
        <!-- <td><%= link_to 'Show', artist %></td> -->
        <td>
          <% if can? :update, Artist %>
            <%= link_to 'Edit', edit_artist_path(artist) %></td>
          <% end %>
        <td>
          <% if can? :destroy, Artist %>
            <%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Artist %>
  <%= link_to 'New Artist', new_artist_path %>
<% end %>
